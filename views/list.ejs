<%- include('header') -%>
<div class="box" id='heading'>
  <h1> <%= listTitle %></h1>
</div>
<div class="box">

  <%newListItem.forEach(function(item){%>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" value="<%=item._id%>" onchange="this.form.submit()" name='checkbox'>
      <p> <%= item.name %> </p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle%>"></input>
  </form>

  <%});%>



  <form class="item" action="/" method="post">
    <input type="text" name="listItem" value="" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%=listTitle%>">+</button>
  </form>

</div>
<%- include('footer') -%>
